<icon class="searchicon" size='20' type='search'></icon>  
<input class="aaa" placeholder="请输入工号或姓名" bindinput="inputsearch" value="{{search}}"/>
<button class="btn_search" bindtap='btn_search' size='mini'>搜索</button>
</view>
<checkbox class="check"  bindtap="selectall">反选</checkbox>
<button class='btn_add' type="default" bindtap='btn_add' size='mini'>添加</button>
